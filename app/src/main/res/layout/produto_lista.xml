<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aListaRecyclerview.ProdutoView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Produtos"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/produtoBtnListaXml"
            android:onClick="produtoBtnListaXml"
            android:text="Lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/produtoListaXml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/produto_linha" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>